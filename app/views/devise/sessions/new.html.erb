<div class="devise">
  <h3 class="ui center aligned header">Login</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {method: :post, class: 'ui form'}) do |f| %>
    <div class="ui stackable grid">
      <div class="row">
        <div class="column">
          <div class="required field">
            <%= f.label :email %>
            <%= f.email_field :email, required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
          <div class="required field">
            <%= f.label :password %>
            <%= f.password_field :password, required: true, autocomplete: 'off' %>
          </div>
          <div class="inline field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <div class="field">
            <%= f.submit 'Enviar', class: 'ui submit fluid blue inverted button' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
