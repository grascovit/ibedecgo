<div class="ui container booklets">
  <div class="ui horizontal divider">
    <h2 class="ui center aligned header">CARTILHAS E MANUAIS</h2>
  </div>
  <div class="ui divided relaxed items">
    <% @booklets.each do |booklet| %>
      <%= link_to booklet_path(booklet), class: 'item' do %>
        <i class="<%= attachment_icon_class(booklet.attachment.content_type) %>"></i>
        <div class="content">
          <div class="header">
            <%= booklet.title %>
          </div>
          <div class="meta">
            <p>
              Ano de lan√ßamento: <%= booklet.year %>
            </p>
            <p>
              Categoria: <%= booklet_category_i18n(booklet.category) %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>