<div class="ui stackable secondary mobile hidden menu">
  <%= link_to root_path, class: 'item logo' do %>
    <%= image_tag 'logo', class: 'ui rounded small image' %>
  <% end %>
  <div class="right menu">
    <%= link_to 'O IBEDEC', about_path, class: 'item' %>
    <%= link_to 'Notícias', news_path, class: 'item' %>
